pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SreekardesikJetti/hellojenkins'
            }
        }

        stage('Debug') {
            steps {
                sh 'pwd'
                sh 'ls -la'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Run') {
            steps {
                sh 'java -jar target/*.jar'
            }
        }
    }
}


