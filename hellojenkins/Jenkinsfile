pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SreekardesikJetti/hellojenkins'
            }
        }

        stage('Build') {
            steps {
                dir('hellojenkins') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Run') {
            steps {
                dir('hellojenkins') {
                    sh 'nohup java -jar target/*.jar &'
                }
            }
        }
    }
}
