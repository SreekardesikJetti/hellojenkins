pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Run') {
            steps {
                sh 'nohup mvn spring-boot:run &'
                sh 'sleep 10'
            }
        }
        stage('Test') {
            steps {
                sh 'curl http://localhost:8080'
            }
        }
    }
}
